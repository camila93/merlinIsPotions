{
  "name": "merlinispotions",
  "version": "1.0.0",
  "description": "To run: `npm install` and `npm start`",
  "main": "index.js",
  "scripts": {
    "build-css": "node-sass assets/sass/app.scss -o dist/ --source-map true",
    "dev": "rerun-script",
    "lite": "lite-server",
    "start": "concurrently \"npm run dev\"  \"npm run lite\""
  },
  "watches": {
    "build-css": "assets/sass/**/**/*.scss"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/camila93/merlinIsPotions.git"
  },
