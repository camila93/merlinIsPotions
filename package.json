  "license": "ISC",
  "bugs": {
    "url": "https://github.com/camila93/merlinIsPotions/issues"
  },
  "homepage": "https://github.com/camila93/merlinIsPotions#readme",
  "devDependencies": {
    "concurrently": "^2.2.0",
    "lite-server": "^2.2.2",
    "node-sass": "^3.8.0",
    "rerun-script": "^0.6.0"
  }
}
